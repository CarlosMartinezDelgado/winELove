
<h2 style="color:rgb(63, 63, 233)">{{currentUser.nickname}}</h2>

<div id="create-form" style="width: 30rem">
  <div class="input-group mb-3">
    <span id="etiqueta"
      for="username"
      class="input-group-text"
      id="inputGroup-sizing-default"
    >User Name:</span>
    <input
      type=""
      name="username"
      value="{{currentUser.username}}"
      class="form-control"
      aria-label="Sizing example input"
      aria-describedby="inputGroup-sizing-default"
    />
  </div>

  <div class="input-group mb-3">
    <span id="etiqueta"
      for="email"
      class="input-group-text"
      id="inputGroup-sizing-default"
    >Email:</span>
    <input
      type="text"
      name="email"
      value="{{currentUser.email}}"
      class="form-control"
      aria-label="Sizing example input"
      aria-describedby="inputGroup-sizing-default"
    />
  </div>

  <div class="input-group mb-3">
    <span id="etiqueta"
      for="password"
      class="input-group-text"
      id="inputGroup-sizing-default"
    >Password:</span>
    <input
      type="texts"
      name="password"
      value="**********************"
      class="form-control"
      aria-label="Sizing example input"
      aria-describedby="inputGroup-sizing-default"
    />
  </div>

  <div class="input-group mb-3">
    <span id="etiqueta"
      for="country"
      class="input-group-text"
      id="inputGroup-sizing-default"
    >Country:</span>
    <input
      type="text"
      name="country"
      value="{{currentUser.country}}"
      class="form-control"
      aria-label="Sizing example input"
      aria-describedby="inputGroup-sizing-default"
    />
  </div>

    <div>
      <img src="../images/Avatar_prueba.jpeg" class="card-img-top" alt="Image" style="width: 20rem">
    </div>

 <br>

