<h3>Add new wine</h3>

<div id="create-form" style="width: 30rem">
<form action="/wines/addWine" method="POST">

  <div class="input-group mb-3">
    <span id="etiqueta"
      for="name"
      class="input-group-text"
      id="inputGroup-sizing-default"
    >Name:</span>
    <input
      type="text"
      name="name"
      class="form-control"
      aria-label="Sizing example input"
      aria-describedby="inputGroup-sizing-default"
    />
  </div>

  <div class="input-group mb-3">
    <span id="etiqueta"
      for="aging"
      class="input-group-text"
      id="inputGroup-sizing-default"
    >Aging:</span>
    <input
      type="text"
      name="aging"
      class="form-control"
      aria-label="Sizing example input"
      aria-describedby="inputGroup-sizing-default"
    />
  </div>

  <div class="input-group mb-3">
    <span id="etiqueta"
      for="grapes"
      class="input-group-text"
      id="inputGroup-sizing-default"
    >Varieties:</span>
    <input
      type="texts"
      name="grapes"
      class="form-control"
      aria-label="Sizing example input"
      aria-describedby="inputGroup-sizing-default"
    />
  </div>
  <div class="input-group mb-3">
    <span id="etiqueta"
      for="vintage"
      class="input-group-text"
      id="inputGroup-sizing-default"
    >Vintage:</span>
    <input
      type="text"
      name="vintage"
      class="form-control"
      aria-label="Sizing example input"
      aria-describedby="inputGroup-sizing-default"
    />
  </div>
  <div class="input-group mb-3">
    <span id="etiqueta"
      for="country"
      class="input-group-text"
      id="inputGroup-sizing-default"
    >Country:</span>
    <input
      type="texts"
      name="country"
      class="form-control"
      aria-label="Sizing example input"
      aria-describedby="inputGroup-sizing-default"
    />
  </div>
  <div class="input-group mb-3">
    <span id="etiqueta"
      for="bio"
      class="input-group-text"
      id="inputGroup-sizing-default"
    >Bio:</span>
    <input
      type="boolean"
      name="bio"
      class="form-control"
      aria-label="Sizing example input"
      aria-describedby="inputGroup-sizing-default"
    />
  </div>
  <div class="input-group mb-3">
    <span id="etiqueta"
      for="type"
      class="input-group-text"
      id="inputGroup-sizing-default"
    >Type:</span>
    <input
      type="texts"
      name="type"
      class="form-control"
      aria-label="Sizing example input"
      aria-describedby="inputGroup-sizing-default"
    />
    
  <div id="etiqueta">
    <button class="btn btn-outline-success" type="submit">Enter</button>
  </div>

</form>

{{#if errorMessage}}
   <p>{{errorMessage}}</p>
{{/if}}

</div>