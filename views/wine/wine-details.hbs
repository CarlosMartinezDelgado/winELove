<div class="cardWine"></div>
<div class:"allComents">

  <div class="card mb-3"style="max-width: 495px;">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="{{wineDetails.image}}"class="img-fluid rounded-start" alt="wine image">
      </div>
      <div class="col-md-8" class="wineDetails">
        <div class="card-body">
          <h5 class="card-title" style="color:rgb(33, 37, 32)">{{wineDetails.name}}</h5>
          <p class="card-text">
            <ul style="background: rgb(33, 39, 32)">
              <li>{{wineDetails.type}}</li>
              <li>{{wineDetails.grapes}}</li>
              <li>{{wineDetails.country}}</li>
              <li>{{wineDetails.aging}}</li>
              <li>{{wineDetails.vintage}}</li>
              
            </ul>
          </p>
          <p class="card-text"><small class="text-muted">Your comment here:</small></p>
        </div>
      </div>
    </div>

    <div id="create-form" style="width: 30rem">
    <form method="post" action="/comments/create/{{wineDetails._id}}">
      <div class="form-floating" class="comment">
        <input
            type="text"
            name="text"
            class="form-control"
            placeholder="Leave a comment here"
            id="floatingTextarea2"
            style="height: 100px"
            aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-default"       
        />
      </div>
      
      <div id="comment-label">
        <button class="btn btn-secondary" type="submit">Submit</button>
      </div>

    </form>

    </div>

      {{#if isLoggedAdmin}}
        <form method="POST" action="/wines/{{wineDetails._id}}/edit">
          <button class="btn btn-outline-warning">Edit</button>
        </form>

        <form method="POST" action="/wines/{{wineDetails._id}}/delete">
          <button class="btn btn-outline-danger">Delete</button>
        </form>
      {{/if}}
    </div>

  </div>

  <div>

    {{#each allComments}}
    <div>
    <p>{{this.userId.nickname}}</p>
    <p>{{this.text}}</p>
      <div class="btn-group me-2" role="group" aria-label="Second group">
      <form method="POST" action="/comments/{{this._id}}/delete">
      <button type="submit" class="btn btn-secondary">X</button>
      </form>
      </div>
    </div>

    {{/each}}


  </div>
</div>