
<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{wineDetails.image}}" class="img-fluid rounded-start" alt="wine image">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{wineDetails.name}}</h5>
        <p class="card-text">
          <ul>
            <li>{{wineDetails.type}}</li>
            <li>{{wineDetails.grapes}}</li>
            <li>{{wineDetails.country}}</li>
            <li>{{wineDetails.aging}}</li>
            <li>{{wineDetails.vintage}}</li>
            
          </ul>
        </p>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
      </div>
    </div>
  </div>

  <div id="create-form" style="width: 30rem">
